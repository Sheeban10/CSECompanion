    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <androidx.cardview.widget.CardView
            android:id="@+id/about_sheeban_fareedi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="12dp"
            android:layout_margin="20dp"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/sheeban" />

                <TextView
                    android:layout_marginTop="12dp"
                    android:text="Sheeban Fareedi"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="2dp"
                    android:text="[Android Developer]"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="7dp"
                    android:text="@string/clg_des_dev"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:id="@+id/dev_insta_sheeban"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"

                        android:src="@drawable/insta_logo"
                        android:layout_marginStart="95dp"
                        android:layout_marginLeft="95dp" />

                    <ImageView
                        android:id="@+id/dev_gmail_sheeban"
                        android:layout_toRightOf="@id/dev_insta_sheeban"
                        android:layout_width="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/gmail"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/dev_insta_sheeban" />

                    <ImageView
                        android:id="@+id/dev_linkdin_sheeban"
                        android:layout_toRightOf="@id/dev_gmail_sheeban"
                        android:layout_width="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/linkedin"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/dev_gmail_sheeban" />

                    <ImageView
                        android:id="@+id/dev_github_sheeban"
                        android:layout_toRightOf="@id/dev_linkdin_sheeban"
                        android:layout_width="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/github"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/dev_linkdin_sheeban" />



                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

